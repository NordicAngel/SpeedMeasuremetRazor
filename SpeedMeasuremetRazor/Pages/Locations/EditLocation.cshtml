@page
@model SpeedMeasuremetRazor.Pages.Locations.EditLocationModel
@{
}

<h3>Edit a location</h3>

<form method="post">
    <div class="form-group">
        <label asp-for="Location.Address"></label>
        <input asp-for="Location.Address" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Location.Zone"></label>
        <input asp-for="Location.Zone" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Location.SpeedLimit"></label>
        <input asp-for="Location.SpeedLimit" class="form-control" />
    </div>
    <input type="submit" class="btn btn-primary" value="Save Edits" />
</form>